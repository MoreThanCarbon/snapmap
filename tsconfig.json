{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },
    "include": [
        "app/*.ts",
        "node_modules/bg2-typeahead/index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}